set -eu

# This is a cheap mr/cm-alike. Perhaps we should use mr/cm.

TOOLS="https://github.com/openstack/diskimage-builder https://github.com/openstack/tripleo-image-elements https://github.com/openstack/tripleo-heat-templates"

for TOOL in $TOOLS; do
    TOOL_BASE=$(basename $TOOL)
    echo pulling/updating $TOOL_BASE
    if [ ! -d $TRIPLEO_ROOT/$TOOL_BASE ] ; then
        cd $TRIPLEO_ROOT
        git clone $TOOL
    else
        cd $TRIPLEO_ROOT/$TOOL_BASE
        git pull
    fi
done
