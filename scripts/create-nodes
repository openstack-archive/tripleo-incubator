#!/bin/bash
set -eu

BASE=$(dirname $0)/../

CPU=$1
MEM=$(( 1024 * $2 ))
# extra G to allow fuzz for partition table : flavor size and registered size
# need to be different to actual size.
DISK=$(( $3 + 1))
TOTAL=$4

# define the default storage pool if its not there yet
(virsh pool-list --all --persistent | grep default) || (
 virsh pool-define-as --name default dir --target /var/lib/libvirt/images; virsh pool-autostart default; virsh pool-start default)

for (( ; TOTAL > 0; TOTAL-- )) ; do
  bmid=$(head -c 6 /dev/urandom | base64 | sed -e 's/[/+]//g')
  virsh vol-create-as default baremetal-$bmid.qcow2 ${DISK}G --format qcow2 --prealloc-metadata
  configure-vm --bootdev network --name baremetal_$bmid --image /var/lib/libvirt/images/baremetal-$bmid.qcow2 --arch i686 --cpus $CPU --memory $MEM
done
